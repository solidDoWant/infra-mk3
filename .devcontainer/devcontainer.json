// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"hediet.vscode-drawio",
				"yzhang.markdown-all-in-one",
				"bierner.markdown-mermaid",
				"ms-azuretools.vscode-docker",
				"redhat.vscode-yaml",
				"signageos.signageos-vscode-sops",
				"timonwong.shellcheck",
				"redhat.ansible"
			]
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker": {
			"installDockerBuildx": true
		},
		"ghcr.io/devcontainers/features/python": {}
	},
	"mounts": [
		// Used to for SSH access to hardware
		"type=bind,source=${localEnv:HOME}/.ssh,target=/vscode/.ssh",
		// Used for Docker out of Docker container mounts
		"type=bind,source=/tmp/host-mounts,target=/tmp/host-mounts"
	],
	"containerEnv": {
		"SOPS_AGE_KEY_FILE": "${containerWorkspaceFolder}/keys/primary.key"
	},
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	// Copy SSH keys over and make them readable by the current user
	"postCreateCommand": "sudo cp -r /vscode/.ssh/. ~/.ssh && sudo chown -R \"$(id -u):$(id -g)\" ~/.ssh && && pipx install --include-deps ansible ansible-lint && cat ansible/requirements.txt | xargs pipx inject ansible"
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}